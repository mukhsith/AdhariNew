@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedHtmlLocalizer
@model Utility.Models.Frontend.CustomizedModel.QuickPaymentModel
@{
    var requestCultureFeature = System.Globalization.CultureInfo.CurrentCulture.Name;
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures.Select(c => new SelectListItem { Value = c.Name, Text = localizer.GetString(c.Name) })
                                                           .Where(i => i.Value != requestCultureFeature).ToList();
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";

}
<section class="py-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <a href="index.html"><img src="assets/img/Adhari-Logo.svg" class="img-fluid mb-4" alt="" width="100"></a>
                <h1 class="text-primary fw-bold">@SharedHtmlLocalizer["QuickPay"]</h1>
            </div>
            <div class="col-12 offset-lg-2 col-lg-8">
                <div class="customer-details mb-4">
                    <h4 class="text-primary text-center fw-bold mb-3">@SharedHtmlLocalizer["CustomerDetails"]</h4>
                    <div class="bg-grey row rounded-4 p-3 mx-0">
                        <div class="col-6 col-md-4 mb-3 mb-md-0">
                            <label for="name" class="fw-bold">@SharedHtmlLocalizer["Name"]</label>
                            <p class="text-primary mb-0">@Model.Customer.Name</p>
                        </div>
                        <div class="col-6 col-md-4 mb-3 mb-md-0">
                            <label for="number" class="fw-bold">@SharedHtmlLocalizer["MobileNumber"]</label>
                            <p class="text-primary mb-0">@Model.Customer.MobileNumber</p>
                        </div>
                        <div class="col-6 col-md-4">
                            <label for="number" class="fw-bold">@SharedHtmlLocalizer["AmountPayable"]</label>
                            <p class="text-primary mb-0">@Model.FormattedAmount</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 offset-lg-2 col-lg-8">
                <div class="payment-method mb-4">
                    <h4 class="text-primary text-center fw-bold mb-3">@SharedHtmlLocalizer["PaymentMethod"]</h4>
                    <div class="bg-grey rounded-4 p-3 mx-0">
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.PaymentMethods)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <input class="form-check-input me-2 mt-0" type="radio" id="flexRadioDefault-@item.Id" value="@item.Id"
                                               aria-label="..." name="payment-method-radio">
                                        <span>@item.Name</span>
                                    </div>
                                    <span class=""><img src="@item.ImageUrl" alt=""></span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-12 text-center">
                <button id="a-proceed-payment" href="javascript:;" class="btn btn-primary rounded-pill px-5" disabled >@SharedHtmlLocalizer["ProceedToPayment"]</button>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('input[type=radio][name=payment-method-radio]').change(function () {
            $("#a-proceed-payment").attr('disabled', false);
        });

        $("#a-proceed-payment").click(function () {
            debugger;
            var paymentMethodId = $('input[name="payment-method-radio"]:checked').val();
            $.post("@Url.RouteUrl("createqpay")", {
                QuickPayNumber: '@Model.QuickPayNumber',
                PaymentMethodId: 1
            }, function (result) {
                debugger;
                if (result.success && result.data != null) {
                    if (result.data.redirectToPaymentPage) {
                        window.location.href = result.data.paymentUrl;
                    }
                    else {
                        window.location.href = "/ORD/" + result.data.entityNumber;
                    }
                }
                else {
                    if (result.message != "")
                        ToastAlert('error', '', result.message);
                }
            });

            return false;
        });
    });
</script>