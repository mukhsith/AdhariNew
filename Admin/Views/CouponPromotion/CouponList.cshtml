@{
}
<header class="page-header">
    <h2>@SharedHtmlLocalizer["Coupons"]</h2>
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

        </ol>

    </div>
</header>
<div class="row">
    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["FilterBy"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-4 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="" class="form-label">@SharedHtmlLocalizer["CouponCode"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="couponCode" id="couponCode" aria-describedby="@SharedHtmlLocalizer["CouponCode"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-4 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="" class="form-label">@SharedHtmlLocalizer["Status"]</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary" name="statusList" id="statusList" aria-describedby="@SharedHtmlLocalizer["Status"]">
                            <option value="">@SharedHtmlLocalizer["All"]</option>
                            <option value="1">@SharedHtmlLocalizer["Active"]</option>
                            <option value="2">@SharedHtmlLocalizer["Expired"]</option>
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 col-lg-4 mb-3">
                        <!-- ========== Start Datepicker Field ========== -->
                        <label for="" class="form-label">@SharedHtmlLocalizer["DateCreated"]</label>
                        <div class="input-group rounded-4">
                            <span class="input-group-text rounded-4 border border-secondary">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <!-- ========== Start Simple Input Field ========== -->


                            <input type="text" data-plugin-datepicker autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="createdOn" id="createdOn" aria-describedby="" placeholder="" value="">


                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <!-- ========== End Datepicker Field ========== -->
                    </div>
                    <div class="col-12 ">
                        <a href="#" class="btn btn-primary btn-lg fw-bold " onclick="searchDataTable()">@SharedHtmlLocalizer["Search"]</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["Coupons"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                    <button class="btn btn-primary btn-sm " onclick="window.location = '/couponPromotion/CouponAddEdit?id=0';">@SharedHtmlLocalizer["AddNewCoupon"]</button>

                </div>
            </header>
            <div class="card-body ">
                <table class="table border-secondary align-middle mb-0 mobile-optimised datatable-default-" id="datatable-default-">
                    <thead>
                        <tr>
                            <th data-priority="10" class="text-center">@SharedHtmlLocalizer["ID"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["Status"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["CouponCode"]</th>
                            <th data-priority="2" class="">@SharedHtmlLocalizer["StartDate"]</th>
                            <th data-priority="3" class="">@SharedHtmlLocalizer["EndDate"]</th>
                            <th data-priority="4" class="">@SharedHtmlLocalizer["Limited"]</th>
                            <th data-priority="5" class="">@SharedHtmlLocalizer["Quantity"]</th>
                            <th data-priority="6" class="">@SharedHtmlLocalizer["TimesUsed"]</th>
                            <th data-priority="2" class="text-start">@SharedHtmlLocalizer["Validity"]</th>
                            <th data-priority="6" class="">@SharedHtmlLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody class="border-secondary">
                    </tbody>
                </table>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>



<!-- end: page -->
<script src="~/developer/js/CouponPromotion/Coupon_Datatable.js" asp-append-version="true"></script>