                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary " 
                                           name="signupCashbackValueExpiryInNoOfDays" id="signupCashbackValueExpiryInNoOfDays" 
                                           aria-describedby="@SharedHtmlLocalizer["CashbackValidityDays"]" placeholder="" value="30" min="0">


                                    <!-- ========== End Simple Input Field ========== -->
                                </div>
                                <div class="col-12 col-lg-6 mb-3">
                                    <!-- ========== Start Datepicker Field ========== -->
                                    <label for="promotionDateRange" class="form-label">@SharedHtmlLocalizer["PromotionDuration"]</label>
                                    <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                                        <span class="input-group-text rounded-4 border border-secondary">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                        <!-- ========== Start Simple Input Field ========== -->


                                        <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary "
                                               name="signupFromDate" id="signupFromDate" aria-describedby="" placeholder="" value="">
                                        <!-- ========== End Simple Input Field ========== -->
                                        <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                            @SharedHtmlLocalizer["To"]
                                        </span>
                                        <!-- ========== Start Simple Input Field ========== -->
                                        <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary "
                                               name="signupToDate" id="signupToDate" aria-describedby="" placeholder="" value="">


                                        <!-- ========== End Simple Input Field ========== -->
                                    </div>
                                    <!-- ========== End Datepicker Field ========== -->
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
