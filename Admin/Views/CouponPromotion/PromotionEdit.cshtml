<header class="page-header">
    <h2>@SharedHtmlLocalizer["GlobalPromotions"]</h2>
    <input type="hidden" value="" id="Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
