                                    <!-- ========== Start Tooltip ========== -->
                                    <i class="fas fa-question-circle fs-5  ms-2" data-bs-toggle="tooltip" title="@SharedHtmlLocalizer["EnablesRegistrationCashbackBonus"]" data-bs-original-title="@SharedHtmlLocalizer["EnablesRegistrationCashbackBonus"]" aria-label="@SharedHtmlLocalizer["EnablesRegistrationCashbackBonus"]"></i>
                                    <!-- ========== End Tooltip ========== -->
                                </span>
                            </h2>
                            <!-- ========== Start ios7 Switch ========== -->

                            <div class="switch switch-sm switch-primary my-0 SignupPromotion-switch">
                                <input type="checkbox" name="signupEnabled" id="signupEnabled" data-plugin-ios-switch />
                            </div>
                            <!-- ========== End ios7 Switch ========== -->

                            <div class="row mt-2 SignupPromotion">
                                <div class="col-12 col-lg-3 mb-3">
                                    <!-- ========== Start Simple Input Field ========== -->

                                    <label for="" class="form-label">@SharedHtmlLocalizer["CashbackValueKWD"]<span class=" text-danger">*</span></label>
                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary "
                                           name="signupCashbackValue" id="signupCashbackValue" aria-describedby="@SharedHtmlLocalizer["CashbackValueKWD"]"
                                           placeholder="" value="0" min="0">


                                    <!-- ========== End Simple Input Field ========== -->
                                </div>
                                <div class="col-12 col-lg-3 mb-3">
                                    <!-- ========== Start Simple Input Field ========== -->

                                    <label for="" class="form-label">@SharedHtmlLocalizer["CashbackValidityDays"]</label><!-- ========== Start Tooltip ========== -->
