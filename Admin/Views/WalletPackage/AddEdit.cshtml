@{
}
@model Data.Common.BaseEntityId
<header class="page-header">
    <h2> @(@Model.Id > 0 ? @SharedHtmlLocalizer["EditCard"] : @SharedHtmlLocalizer["NewCard"])</h2>
    <input type="hidden" value="@Model.Id" id="Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["CardDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-12 col-lg-6 mb-3">
                                <!-- ========== Start Simple Input Field ========== -->

                                <label for="cardNameEn" class="form-label">@SharedHtmlLocalizer["TitleEn"]<span class=" text-danger">*</span></label>
                                <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                                       name="nameEn" id="nameEn" aria-describedby="@SharedHtmlLocalizer["TitleEn"]" placeholder="@SharedHtmlLocalizer["PleaseEnterTheCardName"]">

                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheCardName"]</div>
                             
                                <!-- ========== End Simple Input Field ========== -->
                            </div>
                            <div class="col-12 col-lg-6 mb-3">
                                <!-- ========== Start Simple Input Field ========== -->

                                <label for="cardNameAr" class="form-label">@SharedHtmlLocalizer["TitleAr"]<span class=" text-danger">*</span></label>
                                <input type="text" dir="rtl" class="form-control form-control-lg rounded-4 border-secondary "
                                       name="nameAr" id="nameAr" aria-describedby="@SharedHtmlLocalizer["TitleAr"]" placeholder="@SharedHtmlLocalizer["PleaseEnterTheCardName"]">

                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheCardName"]</div>
                                <!-- ========== End Simple Input Field ========== -->
                            </div>
                            <div class="col-12 col-lg-6 mb-3">
                                <!-- ========== Start Simple Text Area ========== -->
                                <label for="cardDescEn" class="form-label ">@SharedHtmlLocalizer["DescriptionEn"]<span class=" text-danger">*</span></label>
                                <textarea class="form-control form-control-lg rounded-4 border-secondary "
                                          name="descriptionEn" id="descriptionEn" aria-describedby="@SharedHtmlLocalizer["DescriptionEn"]" placeholder="@SharedHtmlLocalizer["PleaseEnterTheCardDescription"]" rows="3"></textarea>

                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheCardDescription"]</div>
                                <!-- ========== End Simple Text Area ========== -->
                            </div>
                            <div class="col-12 col-lg-6 mb-3">
                                <!-- ========== Start Simple Text Area ========== -->
                                <label for="cardDescAr" class="form-label ">@SharedHtmlLocalizer["DescriptionAr"]<span class=" text-danger">*</span></label>
                                <textarea dir="rtl" class="form-control form-control-lg rounded-4 border-secondary "
                                          name="descriptionAr" id="descriptionAr" aria-describedby="@SharedHtmlLocalizer["DescriptionAr"]" placeholder="@SharedHtmlLocalizer["PleaseEnterTheCardDescription"]" rows="3" ></textarea>

                                <div class="invalid-feedback is-invalid">@SharedHtmlLocalizer["PleaseEnterTheCardDescription"]</div>
                                <!-- ========== End Simple Text Area ========== -->
                            </div>
                            <div class="col-12 col-lg-3 mb-3">
                                <!-- ========== Start Simple Input Field ========== -->

                                <label for="Amount" class="form-label">@SharedHtmlLocalizer["Amount"]<span class=" text-danger">*</span></label>
                                <input type="number" class="form-control form-control-lg rounded-4 border-secondary "
                                       name="amount" id="amount" aria-describedby="@SharedHtmlLocalizer["Amount"]" placeholder="@SharedHtmlLocalizer["PleaseEnterTheCardAmount"]" >

                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheCardAmount"]</div>
                                <!-- ========== End Simple Input Field ========== -->
                            </div>

                            <div class="col-12 col-lg-3 mb-3">
                                <!-- ========== Start Simple Input Field ========== -->

                                <label for="Credit" class="form-label">@SharedHtmlLocalizer["Credit"]<span class=" text-danger">*</span></label>
                                <input type="number" class="form-control form-control-lg rounded-4 border-secondary "
                                       name="walletAmount" id="walletAmount" aria-describedby="@SharedHtmlLocalizer["Credit"]" placeholder="@SharedHtmlLocalizer["PleaseEnterWalletCreditAmount"]" 
                                      >

                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterWalletCreditAmount"]</div>
                                <!-- ========== End Simple Input Field ========== -->
                            </div>


                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <button id="btnSave" class="btn btn-primary btn-lg save-btn fw-bold">@SharedHtmlLocalizer["Save"]</button>
                                <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>

<script src="~/developer/js/WalletPackage/WalletPackage_CRUD.js" asp-append-version="true"></script>

