@{
}
<header class="page-header">
    <h2>Deliveries Dashboard</h2>
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

        </ol>

    </div>
</header>
<div class="row">

    <div class="col-12 col-lg-4">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-success">
                <h2 class="card-title text-light text-center w-100"><i class='fa-solid fa-truck me-2'></i> Deliveries due today</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold">@Model.DeliveriesDue</h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>

    <div class="col-12 col-lg-4">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-info">
                <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-cube me-2'></i> Order deliveries today</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold">@Model.OrderDeliveries</h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>

    <div class="col-12 col-lg-4">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-warning">
                <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-cubes me-2'></i> Subscription deliveries today</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold">@Model.SubscriptionDeliveries</h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>

    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">Filter By</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="OrderID" class="form-label">Order ID</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="orderNumber" id="orderNumber" aria-describedby="Order ID" placeholder="Enter Order ID" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Datepicker Field ========== -->
                        <label for="" class="form-label">Delivery Date</label>
                        <div class="input-group rounded-4">
                            <span class="input-group-text rounded-4 border border-secondary">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <!-- ========== Start Simple Input Field ========== -->


                            <input type="text" data-plugin-datepicker autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary "
                                   name="deliveryDate" id="deliveryDate" aria-describedby="" placeholder="" value="">


                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <!-- ========== End Datepicker Field ========== -->
                    </div>
                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="OrderType" class="form-label">Order Type</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary" name="orderTypeList" id="orderTypeList" aria-describedby="Order Type">
                            <option selected value="">All</option>
                            <option value="1">Normal</option>
                            <option value="2">Subscription</option>
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="OrderType" class="form-label">Order Mode</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary" name="orderModeList" id="orderModeList" aria-describedby="Order Mode">
                            <option selected value="">All</option>
                            <option value="1">Online</option>
                            <option value="2">Offline</option>

                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>

                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Select2 Field Block ========== -->
                        <label for="" class="form-label">Area</label>
                        <select data-plugin-selectTwo class="form-select form-select-lg rounded-4 border-secondary" name="areaList" id="areaList" data-plugin-options='{ "placeholder": "", "allowClear": true}'>
                            <option value=""></option>
                            <option>Ahmadi</option>
                            <option>Farwaniyah</option>
                        </select>


                        <!-- ========== End Select2 Field Block ========== -->
                    </div>
                    <div class="col-12 col-lg-2 mb-3">
                        <!-- ========== Start Select2 Field Block ========== -->
                        <label for="" class="form-label">Driver</label>
                        <select data-plugin-selectTwo class="form-select form-select-lg rounded-4 border-secondary"
                                name="driverList" id="driverList"
                                data-plugin-options='{ "placeholder": "", "allowClear": true}'>
                        </select>


                        <!-- ========== End Select2 Field Block ========== -->
                    </div>


                    <div class="col-12 mt-3">
                        <a href="#" class="btn btn-lg btn-primary" onclick="searchForDataTable()">Search</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>


</div>
<!-- Bulk Actions Code. Temporarily Disabled -->
<div class="row pt-0">
    <div class="col-12">

        <div class="tabs">
            <ul class="nav nav-tabs border-secondary">
                <li class="nav-item active">
                    <a class="nav-link" data-bs-target="#notdispatched" href="#notdispatched" data-bs-toggle="tab">
                        Not Dispatched
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-target="#dispatched" href="#dispatched" data-bs-toggle="tab">Dispatched</a>
                </li>
            </ul>
            <div class="tab-content bg-white">
                <div id="notdispatched" class="tab-pane active">
                    <div class="row">
                        <div class="col-12">
                            <!-- ========== Start Card Block ========== -->
                            <section class="card mb-3 border border-secondary bg-secondary" style="display:none">
                                <div class="card-body bg-secondary">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="text-light m-0">Bulk Actions</h3>
                                        <div class="input-group w-auto">
                                            <!-- ========== Start Simple Select Field Block ========== -->

                                            <select class="form-select form-select-lg rounded-4 border-secondary"
                                                    name="" id="" aria-describedby="">
                                                <option>Select an action..</option>
                                                <option>Assign Driver to Selected</option>
                                            </select>


                                            <!-- ========== End Simple Select Field Block ========== -->
                                            <button class="btn btn-primary fw-bold rounded-4" type="button">Perform Action</button>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <!-- ========== End Card Block ========== -->

                            <div class="d-flex mb-3">
                                <div class="body-bg-primary py-1 px-3 rounded-pill me-2">
                                    Subscription
                                </div>
                                <div class="body-bg-warning py-1 px-3 rounded-pill me-2">
                                    Normal Order
                                </div>
                            </div>
                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised notdispatched-datatable-default-" id="notdispatched-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="0" class=""></th>
                                        <th data-priority="1" class="">Order ID</th>
                                        <th data-priority="2" class="">Order Date</th>
                                        <th data-priority="2" class="">Delivery Date</th>
                                        <th data-priority="1" class="">Order Mode</th>
                                        <th data-priority="1" class="">Order Type</th>
                                        <th data-priority="3" class="">Area</th>
                                        <th data-priority="4" class="">Name</th>
                                        <th data-priority="4" class="">Mobile</th>
                                        <th data-priority="4" class="">Total Amount (KWD)</th>
                                        <th data-priority="5" class="">Order Status</th>
                                        <th data-priority="6" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                            <!-- ========== End Table Block ========== -->
                        </div>
                    </div>
                </div>
                <div id="dispatched" class="tab-pane">
                    <div class="row">
                        <div class="col-12">
                            <!-- ========== Start Card Block ========== -->
                            <section class="card mb-3 border border-secondary bg-secondary" style="display:none">
                                <div class="card-body bg-secondary">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="text-light m-0">Bulk Actions</h3>
                                        <div class="input-group w-auto">
                                            <!-- ========== Start Simple Select Field Block ========== -->

                                            <select class="form-select form-select-lg rounded-4 border-secondary" name="" id="" aria-describedby="">
                                                <option>Select an action..</option>
                                                <option>Assign Driver to Selected</option>
                                            </select>


                                            <!-- ========== End Simple Select Field Block ========== -->
                                            <button class="btn btn-primary fw-bold rounded-4" type="button">Perform Action</button>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <!-- ========== End Card Block ========== -->

                            <div class="d-flex mb-3">
                                <div class="body-bg-primary py-1 px-3 rounded-pill me-2">
                                    Subscription
                                </div>
                                <div class="body-bg-warning py-1 px-3 rounded-pill me-2">
                                    Normal Order
                                </div>
                            </div>

                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised dispatched-datatable-default-" id="dispatched-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="0" class=""></th>
                                        <th data-priority="1" class="">Order ID</th>
                                        <th data-priority="2" class="">Order Date</th>
                                        <th data-priority="2" class="">Delivery Date</th>
                                        <th data-priority="1" class="">Order Mode</th>
                                        <th data-priority="1" class="">Order Type</th>
                                        <th data-priority="3" class="">Area</th>
                                        <th data-priority="4" class="">Name</th>
                                        <th data-priority="4" class="">Mobile</th>
                                        <th data-priority="4" class="">Delivery Fee</th>
                                        <th data-priority="4" class="">Total Amount (KWD)</th>
                                        <th data-priority="4" class="">Driver</th>
                                        <th data-priority="5" class="">Order Status</th>
                                        <th data-priority="6" class="text-center">Actions</th>

                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                            <!-- ========== End Table Block ========== -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/developer/js/Delivery/DeliveriesDashboard_Datatable.js" asp-append-version="true"></script>

