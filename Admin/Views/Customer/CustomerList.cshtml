@{
    // ViewData["Title"] = "Home";
    //Layout = "~/Views/Shared/_Layout.cshtml";

}
<header class="page-header">
    <h2>@SharedHtmlLocalizer["Customers"]</h2>
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["FilterBy"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="" class="form-label">@SharedHtmlLocalizer["CustomerName"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="customerName" id="customerName" aria-describedby="@SharedHtmlLocalizer["CustomerName"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="" class="form-label">@SharedHtmlLocalizer["MobileNumber"]</label>
                        <input type="tel" class="form-control form-control-lg rounded-4 border-secondary " name="customerMobile" id="customerMobile" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="" class="form-label">@SharedHtmlLocalizer["CustomerEmail"]</label>
                        <input type="email" class="form-control form-control-lg rounded-4 border-secondary " name="customerEmail" id="customerEmail" aria-describedby="@SharedHtmlLocalizer["CustomerEmail"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="" class="form-label">@SharedHtmlLocalizer["CustomerType"]</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary" name="customerTypeList" id="customerTypeList" aria-describedby="@SharedHtmlLocalizer["CustomerType"]">
                            <option>@SharedHtmlLocalizer["All"]</option>
                            <option>@SharedHtmlLocalizer["B2B"]</option>
                            <option>@SharedHtmlLocalizer["B2C"]</option>
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 ">
                        <a href="#" class="btn btn-primary btn-lg fw-bold " onclick="searchDataTable()">@SharedHtmlLocalizer["Search"]</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["Customers"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <!-- ========== Start Table Block ========== -->
                <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="datatable-default-">
                    <thead>
                        <tr>
                            <th data-priority="0" class="text-center">@SharedHtmlLocalizer["ID"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["Status"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["CustomerMobile"]</th>
                            <th data-priority="2" class="">@SharedHtmlLocalizer["CustomerEmail"]</th>
                            <th data-priority="3" class="">@SharedHtmlLocalizer["RegistrationDate"]</th>
                            <th data-priority="4" class="">@SharedHtmlLocalizer["TotalOrders"]</th>
                            <th data-priority="5" class="">@SharedHtmlLocalizer["CustomerType"]</th>
                            <th data-priority="6" class="">@SharedHtmlLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody class="border-secondary">
                    </tbody>
                </table>

                <!-- ========== End Table Block ========== -->
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>
<!-- Modals -->
@await Html.PartialAsync("_DisplayWalletModalPartial")
@await Html.PartialAsync("_DisplayAddressesModalPartial")
@await Html.PartialAsync("_ChangeCustomerTypeModalPartial")
<script src="~/developer/js/Customer/customer_Datatable.js" asp-append-version="true"></script>
<!-- end: page -->
