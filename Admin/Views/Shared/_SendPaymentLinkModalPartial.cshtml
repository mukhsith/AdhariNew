<div class="modal fade" id="send-payment-link-modal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="send-payment-link-modalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content border-secondary">

            <div class="modal-header border-secondary body-bg-secondary">
                <h5 class="modal-title fw-bold text-primary" id="send-payment-link-modalLabel">Send Payment Link</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
