                <input type="tel" class="form-control form-control-lg rounded-4 border-secondary "
                       name="dialogMobileNumber" id="dialogMobileNumber" aria-describedby="" placeholder=""
                       value="91234567" max="8" required>
                <!-- ========== End Simple Input Field ========== -->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
