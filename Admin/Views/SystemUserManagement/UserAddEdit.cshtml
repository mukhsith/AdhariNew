@model Data.Common.BaseEntityId
<header class="page-header">
    <h2> @(@Model.Id > 0 ? @SharedHtmlLocalizer["EditSystemUser"] : @SharedHtmlLocalizer["NewSystemUser"])</h2>
    <input type="hidden" value="@Model.Id" id="Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["SystemUserDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                    <div class="row">
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="fullName" class="form-label">@SharedHtmlLocalizer["Name"]<span class=" text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="fullName" id="fullName" aria-describedby="@SharedHtmlLocalizer["Name"]" oninput="maxlength(event);" maxlength="25" required >
                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="mobileNumber" class="form-label">@SharedHtmlLocalizer["MobileNumber"]<span class=" text-danger">*</span></label>
                            <input type="tel" class="form-control form-control-lg rounded-4 border-secondary " name="mobileNumber" id="mobileNumber" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" oninput="maxlength(event);" maxlength="8" required>
                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="emailAddress" class="form-label">@SharedHtmlLocalizer["EmailAddress"]<span class=" text-danger">*</span></label>
                            <input type="email" class="form-control form-control-lg rounded-4 border-secondary " name="emailAddress" id="emailAddress" aria-describedby="@SharedHtmlLocalizer["EmailAddress"]" placeholder="" required>
                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="" class="form-label">@SharedHtmlLocalizer["Password"]<span class=" text-danger">*</span></label>
                            <input type="password" class="form-control form-control-lg rounded-4 border-secondary " name="password" id="password" aria-describedby="@SharedHtmlLocalizer["Password"]" oninput="maxlength(event);" maxlength="12" required>

                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="confirmPassword" class="form-label">@SharedHtmlLocalizer["ConfirmPassword"]<span class=" text-danger">*</span></label>
                            <input type="password" class="form-control form-control-lg rounded-4 border-secondary " name="confirmPassword" id="confirmPassword" aria-describedby=">@SharedHtmlLocalizer["ConfirmPassword"]" oninput="maxlength(event);" maxlength="12" required>

                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="roleList" class="form-label">>@SharedHtmlLocalizer["Role"]<span class=" text-danger">*</span></label>
                            <select class="form-select form-select-lg rounded-4 border-secondary" name="roleList" id="roleList" required>
                            </select>
                        </div>
                        <div class="col-12 col-lg-4 mb-3">
                            <label for="genderList" class="form-label">@SharedHtmlLocalizer["Gender"]<span class=" text-danger">*</span></label>
                            <select class="form-select form-select-lg rounded-4 border-secondary" name="genderList" id="genderList" required>
                                <option value="0">---</option>
                                <option value="1">@SharedHtmlLocalizer["Male"]</option>
                                <option value="2">@SharedHtmlLocalizer["Female"]</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="row mt-3">
                                <div class="col-12">
                                    <button id="btnSave" class="btn btn-primary btn-lg save-btn fw-bold">@SharedHtmlLocalizer["Save"]</button>
                                    <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button>
                                </div>
                            </div>
                        </div>
                    </div> 
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>
 
<script src="~/developer/js/systemUserManagement/User_CRUD.js" asp-append-version="true"></script>
 
