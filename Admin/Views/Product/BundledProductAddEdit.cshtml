@model Data.Common.BaseEntityId
<header class="page-header">
    <h2> @(@Model.Id > 0 ? @SharedHtmlLocalizer["EditBundledProduct"].Value : @SharedHtmlLocalizer["NewBundledProduct"].Value)  </h2>
    <input type="hidden" value="@Model.Id" id="Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["BundledProductDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                       
                                    
                                    
                       <div class="row">
                                            <div class="col-12 col-lg-6 mb-3">
                                                <!-- ========== Start Simple Input Field ========== -->

                                                <label for="nameEn" class="form-label">@SharedHtmlLocalizer["TitleEn"]<span class=" text-danger">*</span></label>
                                                <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="nameEn" id="nameEn" aria-describedby="@SharedHtmlLocalizer["TitleEn"]" placeholder="@SharedHtmlLocalizer["BundledProductName"]" value="" >

                                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductName"]</div>
                                                <!-- ========== End Simple Input Field ========== -->
                                            </div>
                                            <div class="col-12 col-lg-6 mb-3">
                                                <!-- ========== Start Simple Input Field ========== -->

                                                <label for="nameAr" class="form-label">@SharedHtmlLocalizer["TitleAr"]<span class=" text-danger">*</span></label>
                                                <input type="text" dir="rtl" class="form-control form-control-lg rounded-4 border-secondary " name="nameAr" id="nameAr" aria-describedby="@SharedHtmlLocalizer["TitleAr"]" placeholder="@SharedHtmlLocalizer["BundledProductName"]" value="" >

                                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductName"]</div>
                                                <!-- ========== End Simple Input Field ========== -->
                                            </div>
                                            <div class="col-12 col-lg-6 mb-3">
                                                <!-- ========== Start Simple Text Area ========== -->
                                                <label for="descriptionEn" class="form-label ">@SharedHtmlLocalizer["DescriptionEn"]</label>
                                                <textarea class="form-control form-control-lg rounded-4 border-secondary " name="descriptionEn" id="descriptionEn" aria-describedby="@SharedHtmlLocalizer["DescriptionEn"]" placeholder="@SharedHtmlLocalizer["BundledProductDescription"]" rows="3"></textarea>

                                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductDescription"]</div>
                                                <!-- ========== End Simple Text Area ========== -->
                                            </div>
                                            <div class="col-12 col-lg-6 mb-3">
                                                <!-- ========== Start Simple Text Area ========== -->
                                                <label for="descriptionAr" class="form-label ">@SharedHtmlLocalizer["DescriptionAr"]</label>
                                                <textarea dir="rtl" class="form-control form-control-lg rounded-4 border-secondary " name="descriptionAr" id="descriptionAr" aria-describedby="@SharedHtmlLocalizer["DescriptionAr"]" placeholder="@SharedHtmlLocalizer["BundledProductDescription"]" rows="3"></textarea>

                                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductDescription"]</div>
                                                <!-- ========== End Simple Text Area ========== -->
                                            </div>
                                            <div class="col-12 col-lg-12 mb-3">
                                                <div class="col-12 col-lg-12 p-4 rounded-4 body-bg-secondary border border-secondary mx-auto">
                                                    <div class="row">
                                                        <div class="col-12 col-lg-6">
                                                            <h2 class="card-title mb-2 text-secondary">@SharedHtmlLocalizer["AddProductToBundledProduct"]</h2>
                                                        </div>
                                                        <div class="col-12 col-lg-6 d-flex align-items-center mb-3">

                                                            <select data-plugin-selectTwo class="form-control form-control-lg border border-secondary rounded-4 h-100" style="height: 48px" name="productList" id="productList" data-plugin-options='{ "placeholder": "Select a Product...", "allowClear": true,"height": "48px" }'>
                                                            </select>
                                                            <button class="btn btn-primary btn-lg add-product-btn rounded-4 h-100 ms-2" type="button">@SharedHtmlLocalizer["Add"]</button>
                                                        </div>
                                                    </div>
                                                    <hr class="border border-secondary">
                                                    <table class="table border-secondary align-middle mb-0 mobile-optimised datatable-default-bundledProduct" id="datatable-default-bundledProduct">
                                                        <thead>
                                                            <tr>
                                                                <th>@SharedHtmlLocalizer["ID"]</th>
                                                                <th>@SharedHtmlLocalizer["ProductImage"]</th>
                                                                <th>@SharedHtmlLocalizer["ProductName"]</th>
                                                                <th>@SharedHtmlLocalizer["BasePrice"]</th>
                                                                <th>@SharedHtmlLocalizer["QuantityAdded"]</th>
                                                                <th>@SharedHtmlLocalizer["Actions"]</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody class="border-secondary">
                                                        </tbody>
                                                        <tfoot style="display: none;">
                                                            <tr>
                                                                <th></th>
                                                                <th></th>
                                                                <th></th>
                                                                <th>@SharedHtmlLocalizer["TotalPrice"]</th>
                                                                <th>@SharedHtmlLocalizer["TotalQuantity"]</th>
                                                                <th></th>

                                                            </tr>
                                                            <tr>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td class="total-price">@SharedHtmlLocalizer["TotalPrice"]</td>
                                                                <td class="total-qty">@SharedHtmlLocalizer["TotalQuantity"]</td>
                                                                <td></td>

                                                            </tr>
                                                        </tfoot>
                                                    </table>



                                                   
                                                </div>
                                            </div>

                                            

                                            <div class="col-12 my-3">
                                                <h2 class="card-title text-primary">@SharedHtmlLocalizer["B2CPrice"]</h2>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3">
                                                <label class="form-label"> Price<span class=" text-danger">*</span></label>
                                                <div class="input-group mb-3">
                                                    <!-- ========== Start Simple Input Field ========== -->
                                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary " name="price" id="price" aria-describedby="" placeholder="@SharedHtmlLocalizer["BundledProductPrice"]" min="0">

                                                    <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductPrice"]</div>
                                                    <!-- ========== End Simple Input Field ========== -->
                                                    <button class="btn btn-secondary text-light btn-lg fw-bold  rounded-4 calculate-pricing" type="button">@SharedHtmlLocalizer["CalculatePricing"]</button>
                                                </div>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3">
                                                <label class="form-label">@SharedHtmlLocalizer["DiscountedPrice"]</label>
                                                <div class="input-group mb-3">
                                                    <!-- ========== Start Simple Input Field ========== -->
                                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary " name="discountedPrice" id="discountedPrice" aria-describedby="" placeholder="@SharedHtmlLocalizer["BundledProductPrice"]" value="" min="0" >

                                                    <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductPrice"]</div>
                                                    <!-- ========== End Simple Input Field ========== --> 
                                                    <button class="btn btn-secondary text-light btn-lg fw-bold  rounded-4 calculate-pricing" type="button">@SharedHtmlLocalizer["CalculatePricing"]</button>
                                                </div>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3">
                                                <!-- ========== Start Datepicker Field ========== -->
                                                <label for="discountedPriceDateRange" class="form-label">@SharedHtmlLocalizer["DiscountDuration"]</label>
                                                <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                                                    <span class="input-group-text rounded-4 border border-secondary">
                                                        <i class="fas fa-calendar-alt"></i>
                                                    </span>
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="discountFromDate" id="discountFromDate" aria-describedby="" placeholder="@SharedHtmlLocalizer["FromDate"]" value="">
                                                    <!-- ========== End Simple Input Field ========== --> 
                                                    <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                                        @SharedHtmlLocalizer["To"]
                                                    </span>
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="discountToDate" id="discountToDate" aria-describedby="" placeholder="@SharedHtmlLocalizer["ToDate"]" value="">


                                                    <!-- ========== End Simple Input Field ========== -->
                                                </div>
                                                <!-- ========== End Datepicker Field ========== -->
                                            </div>
                                            <div class="col-12 mb-3">
                                                <!-- ========== Start ios7 Switch ========== -->

                                                <div class="switch switch-sm switch-primary my-0  enablePricingB2B-switch">
                                                    <label for="">@SharedHtmlLocalizer["EnableB2BPricing"]</label>
                                                    <input type="checkbox" name="b2BPriceEnabled" id="b2BPriceEnabled" data-plugin-ios-switch  />
                                                </div>
                                                <!-- ========== End ios7 Switch ========== -->

                                            </div>
                                            <div class="col-12 my-3 enablePricingB2B">
                                                <h2 class="card-title text-primary">@SharedHtmlLocalizer["B2BPrice"]</h2>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3 enablePricingB2B">
                                                <label class="form-label">@SharedHtmlLocalizer["B2BPrice"]<span class=" text-danger">*</span></label>
                                                <div class="input-group mb-3">
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary " name="b2BPrice" id="b2BPrice" aria-describedby="" placeholder="Price" value="" min="0">

                                                    <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductPrice"]</div>
                                                    <!-- ========== End Simple Input Field ========== --> 
                                                    <button class="btn btn-secondary text-light btn-lg fw-bold  rounded-4 calculate-pricing" type="button">@SharedHtmlLocalizer["CalculatePricing"]</button>
                                                </div>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3 enablePricingB2B">
                                                <label class="form-label">@SharedHtmlLocalizer["DiscountedPrice"]</label>
                                                <div class="input-group mb-3">
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="number" class="form-control form-control-lg rounded-4 border-secondary " name="b2BDiscountedPrice" id="b2BDiscountedPrice" aria-describedby="" placeholder="@SharedHtmlLocalizer["DiscountedPrice"]" value="" min="0" >

                                                    <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseEnterTheBundledProductPrice"]</div>
                                                    <!-- ========== End Simple Input Field ========== --> 
                                                    <button class="btn btn-secondary text-light btn-lg fw-bold  rounded-4 calculate-pricing" type="button">@SharedHtmlLocalizer["CalculatePricing"]</button>
                                                </div>
                                            </div>
                                            <div class="col-12 col-lg-4 mb-3 enablePricingB2B">
                                                <!-- ========== Start Datepicker Field ========== -->
                                                <label for="discountedPriceDateRange" class="form-label">@SharedHtmlLocalizer["DiscountDuration"]</label>
                                                <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                                                    <span class="input-group-text rounded-4 border border-secondary">
                                                        <i class="fas fa-calendar-alt"></i>
                                                    </span>
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="b2BDiscountFromDate" id="b2BDiscountFromDate" aria-describedby="" placeholder="@SharedHtmlLocalizer["FromDate"]" value="">


                                                    <!-- ========== End Simple Input Field ========== --> 
                                                    <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                                        @SharedHtmlLocalizer["To"]
                                                    </span>
                                                    <!-- ========== Start Simple Input Field ========== -->


                                                    <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="b2BDiscountToDate" id="b2BDiscountToDate" aria-describedby="" placeholder="@SharedHtmlLocalizer["ToDate"]" value="">


                                                    <!-- ========== End Simple Input Field ========== -->
                                                </div>
                                                <!-- ========== End Datepicker Field ========== -->
                                            </div>

                                            <div class="col-12 col-lg-6 mb-3">
                                                <!-- ========== Start Select2 Field Block ========== -->
                                                <label for="categoryList" class="form-label">@SharedHtmlLocalizer["Category"]<span class=" text-danger">*</span></label>
                                                <select data-plugin-selectTwo class="form-select form-select-lg rounded-4 border-secondary" name="categoryList" id="categoryList" data-plugin-options='{ "placeholder": "", "allowClear": true}' >
                                                  
                                                </select>

                                                <div class="invalid-feedback">@SharedHtmlLocalizer["PleaseSelectCategory"]</div>
                                                <!-- ========== End Select2 Field Block ========== -->
                                            </div>
                                            <div class="col-12 col-lg-6 mb-3">
                                                <div class="row">
                                                    <!-- ========== Start Simple Image Upload Block ========== -->
                                                    <div class="row">
                                                        <div class="col-10 mb-3">
                                                            <label for="imageFile" class="form-label">@SharedHtmlLocalizer["BundledProductImage"]<span class=" text-danger">*</span></label>
                                                            <input class="form-control form-control-lg border-secondary rounded-4" type="file" name="imageFile" id="imageFile">
                                                            <small class="form-text text-muted">@SharedHtmlLocalizer["ConsistencyPurpose640X640"]</small>
                                                            <div class="invalid-feedback">
                                                                @SharedHtmlLocalizer["ConsistencyPurpose640X640"]
                                                            </div>
                                                        </div>
                                                        <div class="col-2 d-flex flex-column align-items-center justify-content-center">
                                                            <img src="assets/img/general-placeholder.png" class="img-fluid preview-image-" name="imagePreview" id="imagePreview">
                                                            <p class="text-muted text-center mb-1 mt-2">@SharedHtmlLocalizer["Preview"]</p>
                                                        </div>
                                                    </div>
                                                   
                                                    <!-- ========== End Simple Image Upload Block ========== -->
                                                </div>
                                            </div>

                                        </div>

                                        
                                    
                                
                                <!-- ========== End Card Block ========== -->
                           
                    <div class="row mt-3">
                        <div class="col-12">
                            <button id="btnSave" class="btn btn-primary btn-lg save-btn fw-bold">@SharedHtmlLocalizer["Save"]</button>
                            <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button>

                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>

<script src="~/developer/js/Product/BundledProduct_CRUD.js" asp-append-version="true"></script>

