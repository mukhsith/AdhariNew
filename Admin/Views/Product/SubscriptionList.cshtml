<header class="page-header">
    <h2>@SharedHtmlLocalizer["Subscription"]</h2>
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

        </ol>

    </div>
</header>
<div class="row">
    <div class="col">

        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">Filter By</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-4 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="PaymentLinkID" class="form-label">@SharedHtmlLocalizer["ProductName"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                               name="productName" id="productName" aria-describedby="Product Name" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                   

                    <div class="col-12 col-lg-4 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="PaymentMethod" class="form-label">@SharedHtmlLocalizer["Category"]</label>
                        <select data-plugin-selectTwo class="form-select form-select-lg rounded-4 border-secondary" name="categoryList" id="categoryList" data-plugin-options='{ "placeholder": "@SharedHtmlLocalizer["SelectCategory"]", "allowClear": true}'>
                        </select>

                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 mt-3">
                        <a href="#" class="btn btn-lg btn-primary" onclick="searchDataTable()">Search</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["Subscription"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                    <button class="btn btn-primary btn-sm " onclick="window.location = '/Product/SubscriptionAddEdit?id=0';">@SharedHtmlLocalizer["AddNewSubscription"]</button>

                </div>
            </header>
            <div class="card-body ">
                <table class="table border-secondary align-middle mb-0 mobile-optimised datatable-default-" id="datatable-default-">
                    <thead>
                        <tr>
                            <th data-priority="10" class="">@SharedHtmlLocalizer["ID"]</th>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["DisplayOrder"]</th>
                            <th data-priority="2" class="">@SharedHtmlLocalizer["Status"]</th>
                            <th data-priority="3" class="">@SharedHtmlLocalizer["Image"]</th>
                            <th data-priority="4" class="">@SharedHtmlLocalizer["CategoryNameEn"]</th>
                            <th data-priority="7" class="">@SharedHtmlLocalizer["CategoryNameAr"]</th>
                            <th data-priority="4" class="">@SharedHtmlLocalizer["ProductNameEn"]</th>
                            <th data-priority="11" class="">@SharedHtmlLocalizer["ProductNameAr"]</th>
                            <th data-priority="6" class="">@SharedHtmlLocalizer["Contents"]</th>
                            <th data-priority="7" class="text-center">@SharedHtmlLocalizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody class="border-secondary">
                    </tbody>
                </table>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>


@await Html.PartialAsync("_ProductCancelModalPartial")
<!-- end: page -->
<script src="~/developer/js/Product/Subscription_Datatable.js" asp-append-version="true"></script>