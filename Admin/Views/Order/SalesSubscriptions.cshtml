@model DailySubscriptionSummaryModel


<header class="page-header">
    <h2>@SharedHtmlLocalizer["Subscriptions"]</h2>
    <input type="hidden" id="customerId" value="@Model.CustomerId" />
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col-12 col-lg-4">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-warning">
                <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-cubes me-2'></i> @SharedHtmlLocalizer["SubscriptionsReceivedToday"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold">@Model.FormattedSubscriptionOrdersReceivedToday </h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
    <div class="col-12 col-lg-4">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-primary">
                <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-money-bill me-2'></i> @SharedHtmlLocalizer["SubscriptionSalesAmountToday"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold">@Model.FormattedSubscriptionSalesAmountToday</h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>
<div class="row" style="padding-top: 0px">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["FilterBy"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="OrderID" class="form-label">@SharedHtmlLocalizer["SubscriptionID"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                               name="subscriptionId" id="subscriptionId" aria-describedby="@SharedHtmlLocalizer["SubscriptionID"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Datepicker Field ========== -->
                   
                        <div class="d-flex justify-content-between">
                            <label for="" class="form-label">@SharedHtmlLocalizer["SubscriptionDate"]</label>
                            <a id="btnclear" class="fw-bold text-danger pe-3 " style="cursor: pointer; text-decoration: none;">Clear</a>
                        </div>
                        <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                            @*<span class="input-group-text rounded-4 border border-secondary">
                <i class="fas fa-calendar-alt"></i>
            </span>*@
                            <span class="input-group-text rounded-4 border border-secondary">
                                @SharedHtmlLocalizer["From"]
                            </span>
                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="startDate" id="startDate" aria-describedby="" placeholder="" value="">
                            <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                @SharedHtmlLocalizer["To"]
                            </span>

                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="endDate" id="endDate" aria-describedby="" placeholder="" value="">

                        </div>
                        <!-- ========== End Datepicker Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="CustomerName" class="form-label">@SharedHtmlLocalizer["CustomerName"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                               name="customerName" id="customerName" aria-describedby="@SharedHtmlLocalizer["CustomerName"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="MobileNumber" class="form-label">@SharedHtmlLocalizer["MobileNumber"]</label>
                        <input type="tel" class="form-control form-control-lg rounded-4 border-secondary "
                               name="customerMobile" id="customerMobile" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="CustomerEmail" class="form-label">@SharedHtmlLocalizer["CustomerEmail"]</label>
                        <input type="email" class="form-control form-control-lg rounded-4 border-secondary "
                               name="customerEmail" id="customerEmail" aria-describedby="@SharedHtmlLocalizer["CustomerEmail"]" placeholder="" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>

                    <div class="col-12 col-lg-3 mb-3">
                        <label for="PaymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary"
                                name="paymentMethodList" id="paymentMethodList" aria-describedby="Payment Method">
                            <option value="" selected>@SharedHtmlLocalizer["All"]</option>
                            <option value="@((Int32)PaymentMethod.KNET)">KNET</option>
                            <option value="@((Int32)PaymentMethod.VISAMASTER)">Visa / Mastercard</option>
                            <option value="@((Int32)PaymentMethod.Tabby)">Tabby</option>
                            <option value="@((Int32)PaymentMethod.Cash)">Cash</option>
                            <option value="@((Int32)PaymentMethod.Wallet)">Wallet</option>
                        </select>

                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="OrderStatus" class="form-label">Subscription Status</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary"
                                name="subscriptionStatusList" id="subscriptionStatusList" aria-describedby="Subscription Status">
                            <option value="" selected>@SharedHtmlLocalizer["All"]</option>
                            <option value="@((Int32)SubscriptionStatus.Pending)">@SharedHtmlLocalizer["Pending"]</option>
                            <option value="@((Int32)SubscriptionStatus.Confirmed)">@SharedHtmlLocalizer["Confirmed"]</option>
                            <option value="@((Int32)SubscriptionStatus.Expired)">@SharedHtmlLocalizer["Expired"]</option>
                            <option value="@((Int32)SubscriptionStatus.Cancelled)">@SharedHtmlLocalizer["Cancelled"]</option>
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 mt-3">
                        <a href="#" class="btn btn-lg btn-primary" onclick="searchDataTable()">@SharedHtmlLocalizer["Search"]</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
        <!-- ========== Start Card Block ========== -->
        <div class="tabs">

            <ul class="nav nav-tabs border-secondary">
                <li class="nav-item active">
                    <a class="nav-link" data-bs-target="#paid" href="#paid" data-bs-toggle="tab">@SharedHtmlLocalizer["Paid"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-target="#unpaid" href="#unpaid" data-bs-toggle="tab">@SharedHtmlLocalizer["Unpaid"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-target="#failed" href="#failed" data-bs-toggle="tab">@SharedHtmlLocalizer["Failed"]</a>
                </li>
            </ul>
            <div class="tab-content bg-white">
                <div id="paid" class="tab-pane active">
                    <div class="row">
                        <div class="col-12">
                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="paid-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="1" class="">@SharedHtmlLocalizer["SubscriptionID"]</th>
                                        <th data-priority="2" class="">@SharedHtmlLocalizer["SubscriptionDate"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["MobileNumber"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["TotalAmountKWD"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentMethod"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentStatus"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["OrderStatus"]</th>
                                        <th data-priority="6" class="">@SharedHtmlLocalizer["Actions"]</th>

                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

                <div id="unpaid" class="tab-pane">
                    <div class="row">
                        <div class="col-12">

                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="unpaid-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="1" class="">@SharedHtmlLocalizer["SubscriptionID"]</th>
                                        <th data-priority="2" class="">@SharedHtmlLocalizer["SubscriptionDate"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["MobileNumber"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["TotalAmountKWD"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentMethod"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentStatus"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["OrderStatus"]</th>
                                        <th data-priority="6" class="">@SharedHtmlLocalizer["Actions"]</th>

                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

                <div id="failed" class="tab-pane ">
                    <div class="row">
                        <div class="col-12">
                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="failed-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="1" class="">@SharedHtmlLocalizer["SubscriptionID"]</th>
                                        <th data-priority="2" class="">@SharedHtmlLocalizer["SubscriptionDate"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["MobileNumber"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["TotalAmountKWD"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentMethod"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentStatus"]</th>
                                        <th data-priority="3" class="">@SharedHtmlLocalizer["OrderStatus"]</th>
                                        <th data-priority="6" class="">@SharedHtmlLocalizer["Actions"]</th>

                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ChangeSubscriptionStatusModalPartial")
<script src="~/developer/js/Order/SalesSubscriptions_Datatable.js" asp-append-version="true"></script>
