@model DailyOrderSummaryModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<header class="page-header">
    <h2>@SharedHtmlLocalizer["OrderedItems"]</h2>
    <div class="right-wrapper text-end me-3">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

        </ol>

    </div>
</header>
<div class="row">



    <div class="col-12 col-lg-4">
        <!-- ========== Start Items Sold ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-warning">
                <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-boxes me-2'></i>@SharedHtmlLocalizer["OrderedItems"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row g-0">
                    <div class="col-12 text-center">
                        <h2 class="text-center m-0 fw-bold" id="itemsSoldToday">0</h2>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Items Sold ========== -->
    </div>

 

    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["FilterBy"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">

                   <div class="col-12 col-lg-3 mb-3">
                        <div class="d-flex justify-content-between">
                            <label for="" class="form-label">@SharedHtmlLocalizer["DeliveryDate"]</label>
                            <a id="btnclear" class="fw-bold text-danger pe-3 " style="cursor: pointer; text-decoration: none;">Clear</a>
                        </div>
                        <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                            @*<span class="input-group-text rounded-4 border border-secondary">
                    <i class="fas fa-calendar-alt"></i>
                </span>*@
                            <span class="input-group-text rounded-4 border border-secondary">
                                @SharedHtmlLocalizer["From"]
                            </span>
                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="startDate" id="startDate" aria-describedby="" placeholder="" value="">
                            <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                @SharedHtmlLocalizer["To"]
                            </span>

                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary " name="endDate" id="endDate" aria-describedby="" placeholder="" value="">

                        </div>
                    </div>

                    <div class="col-12 mt-3">
                        <a href="#" class="btn btn-lg btn-primary" onclick="searchOrder()">@SharedHtmlLocalizer["Search"]</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>


</div>
<!-- Bulk Actions Code. Temporarily Disabled -->
<div class="row pt-0">
    <div class="col-12">
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["OrderedItems"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                 &nbsp;

                </div>
            </header>
            <div class="card-body ">
                <table class="table border-secondary align-middle mb-0 mobile-optimised datatable-default-" id="datatable-default-">
                    <thead>
                        <tr>
                            <th data-priority="1" class="">@SharedHtmlLocalizer["ProductNameEn"]</th>
                            <th data-priority="2" class="">@SharedHtmlLocalizer["Quantity"]</th>
                        </tr>
                    </thead>
                    <tbody class="border-secondary">
                    </tbody>
                </table>
            </div>
        </section>

    </div>
</div>

<script src="~/developer/js/Order/OrderedItems.js" asp-append-version="true"></script>