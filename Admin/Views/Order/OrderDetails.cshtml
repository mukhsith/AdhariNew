            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>

    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["ItemsDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12">
                        <!-- ========== Start Table Block ========== -->
                        <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="datatable-default-">
                            <thead>
                                <tr>
                                    <th data-priority="1" class="">@SharedHtmlLocalizer["ID"]</th>
                                    <th data-priority="2" class="">@SharedHtmlLocalizer["Image"]</th>
                                    <th data-priority="3" class="">@SharedHtmlLocalizer["ProductName"]</th>
                                    <th data-priority="4" class="">@SharedHtmlLocalizer["ProductID"]</th>
                                    <th data-priority="4" class="">@SharedHtmlLocalizer["PricePaid"]</th>
                                    <th data-priority="5" class="">@SharedHtmlLocalizer["Quantity"]</th>
                                    <th data-priority="6" class="">@SharedHtmlLocalizer["TotalAmount"]</th>
                                </tr>
                            </thead>
                            <tbody class="border-secondary">
                                @foreach (var item in Model.Data.OrderItems)
                                {
                                <tr class="">
                                    <td class="" data-th="No.">@item.ProductId</td>
                                    <td class="" data-th="Image"><img src='@item.Product.ImageUrl' class='img-fluid' width='100px'></td>
                                    <td class="" data-th="Product Name">@item.Product.Title</td>
                                    <td class="" data-th="Product ID">@item.ProductId</td>
                                    <td class="" data-th="Price Paid">@item.FormattedUnitPrice</td>
                                    <td class="" data-th="Quantity">@item.Quantity</td>
                                    <td class="" data-th="Total Amount">@item.FormattedTotal</td>
                                </tr>
                                }

                            </tbody>
                        </table>

                        <!-- ========== End Table Block ========== -->
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>


    <div class="col-12 d-flex justify-content-between">
        <a href="javascript:;" onclick="downloadPDF(@Model.Data.Id)" class="btn btn-primary btn-lg fw-bold print-page">Print Order Details</a>
        @*<a href="javascript:;" class="btn btn-primary btn-lg fw-bold btn-danger">Cancel Order</a>*@
    </div>
</div>
