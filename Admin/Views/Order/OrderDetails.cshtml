    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["PaymentDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["OrderNumber"]</label>
                        <div class="fw-bold">@Model.Data.OrderNumber</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["TransactionDate"]</label>
                        <div class="fw-bold">@Model.Data.FormattedDate</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["PaymentMethod"]</label>
                        <div class="fw-bold"><span class="px-2 rounded-pill fw-bold bg-info text-light">@Model.Data.PaymentMethod.Name</span></div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["PaymentResult"]</label>
                        <div class="fw-bold">@Model.Data.PaymentResult</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["PaymentID"]</label>
                        <div class="fw-bold">@Model.Data.PaymentId</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["PaymentReference"]</label>
                        <div class="fw-bold">@Model.Data.PaymentRefId</div>
                    </div>
                    <!-- <div class="col-md-3 mb-3">
                      <label for="">Order Status</label>
                      <div class="text-success fw-bold">Delivered</div>
                    </div> -->
