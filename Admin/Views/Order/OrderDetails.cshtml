@model APIResponseModel<Utility.Models.Frontend.Sales.OrderModel>
<header class="page-header">
    <h2>@SharedHtmlLocalizer["OrderDetails"]</h2>
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">


    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["CustomerDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["CustomerName"]</label>
                        <div class="fw-bold">@Model.Data.Customer.Name</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["CustomerEmail"]</label>
                        <div class="fw-bold">@Model.Data.Customer.EmailAddress</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["CustomerMobile"]</label>
                        <div class="fw-bold">@Model.Data.Customer.FormattedMobile</div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>


    <div class="col-12">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["OrderDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    @foreach (var pay in @Model.Data.PaymentSummary)
                    {
                    <div class="col-md-3 mb-3">
                        <label for="">@pay.Title</label>
                        <div class="fw-bold">@pay.Value</div>
                    </div>

                    }

                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["OrderMode"]</label>
                        <div class="fw-bold">@Model.Data.OrderSummary.OrderModeText</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["InitiatedFrom"]</label>
                        <div class="fw-bold">@Model.Data.OrderSummary.SalesmanName</div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["Driver"]</label>
                        <div class="fw-bold">@Model.Data.OrderSummary.DriverName</div>
                    </div>


                    <div class="col-md-3 mb-3">
                        <label for="">@SharedHtmlLocalizer["OrderStatus"]</label>
                        <div class="text-success fw-bold">@Model.Data.OrderSummary.OrderStatusText</div>
                    </div>


                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>



