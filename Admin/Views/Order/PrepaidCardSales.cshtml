@{
}
@model Utility.Models.Admin.WalletPackage.WalletPackageHeader
<header class="page-header">
    <h2>@SharedHtmlLocalizer["PrepaidCardSales"]</h2>
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <div class="row">
            @foreach (var item in Model.Packages)
            {
                <div class="col-12 col-lg-3">
                    <section class="card mb-3 border border-secondary">
                        <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary bg-primary">
                            <h2 class="card-title text-center text-light w-100"><i class='fa-solid fa-cube me-2'></i>@item.Name</h2>
                            <div class="card-actions d-flex position-static top-0 end-0">

                            </div>
                        </header>
                        <div class="card-body ">
                            <div class="row g-0">
                                <div class="col-12 text-center">
                                    <h2 class="text-center m-0 fw-bold">@item.Total</h2>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            }
        </div>
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["FilterBy"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="PaymentID" class="form-label">@SharedHtmlLocalizer["PaymentID"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                               name="paymentId" id="paymentId" aria-describedby="Payment ID" placeholder="Enter Payment ID" value="">

                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Datepicker Field ========== -->
                        <label for="" class="form-label">@SharedHtmlLocalizer["DateRange"]</label>
                        <div class="input-daterange input-group rounded-4" data-plugin-datepicker>
                            <span class="input-group-text rounded-4 border border-secondary">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <!-- ========== Start Simple Input Field ========== -->


                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary "
                                   name="startDate" id="startDate" aria-describedby="" placeholder="" value="">

                            <!-- ========== End Simple Input Field ========== --> 
                            <span class="input-group-text border-start-0 border-end-0 border-secondary rounded-0">
                                @SharedHtmlLocalizer["To"]
                            </span>
                            <!-- ========== Start Simple Input Field ========== -->


                            <input type="text" autocomplete="off" class="form-control form-control-lg rounded-4 border-secondary "
                                   name="endDate" id="endDate" aria-describedby="" placeholder="" value="">


                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <!-- ========== End Datepicker Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="CustomerName" class="form-label">@SharedHtmlLocalizer["CustomerName"]</label>
                        <input type="text" class="form-control form-control-lg rounded-4 border-secondary "
                               name="customerName" id="customerName" aria-describedby="@SharedHtmlLocalizer["CustomerName"]" placeholder="@SharedHtmlLocalizer["EnterName"]" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="MobileNumber" class="form-label">@SharedHtmlLocalizer["MobileNumber"]</label>
                        <input type="tel" class="form-control form-control-lg rounded-4 border-secondary "
                               name="mobileNumber" id="mobileNumber" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" placeholder="@SharedHtmlLocalizer["EnterMobileNumber"]" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Input Field ========== -->

                        <label for="CustomerEmail" class="form-label">@SharedHtmlLocalizer["CustomerEmail"]</label>
                        <input type="email" class="form-control form-control-lg rounded-4 border-secondary "
                               name="customerEmail" id="customerEmail" aria-describedby="@SharedHtmlLocalizer["CustomerEmail"]" placeholder="@SharedHtmlLocalizer["EnterEmail"]" value="">


                        <!-- ========== End Simple Input Field ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="PaymentName" class="form-label">@SharedHtmlLocalizer["PrepaidCardName"]</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary"
                                name="prepaidCardList" id="prepaidCardList" aria-describedby="@SharedHtmlLocalizer["PrepaidCardName"]">
                            <option selected>@SharedHtmlLocalizer["SelectPrepaidCard"]</option>
                            @foreach (var package in Model.DropdownList)
                            {
                                <option value="@package.Id">@package.Title</option>
                            }
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 col-lg-3 mb-3">
                        <!-- ========== Start Simple Select Field Block ========== -->
                        <label for="PaymentMethod" class="form-label">@SharedHtmlLocalizer["PaymentMethod"]</label>
                        <select class="form-select form-select-lg rounded-4 border-secondary"
                                name="paymentMethodList" id="paymentMethodList" aria-describedby="Payment Method">
                            <option selected>@SharedHtmlLocalizer["SelectMethod"]</option>
                            <option value="" selected>@SharedHtmlLocalizer["All"]</option>
                            <option value="@((Int32)PaymentMethod.KNET)">KNET</option>
                            <option value="@((Int32)PaymentMethod.VISAMASTER)">Visa / Mastercard</option>
                            <option value="@((Int32)PaymentMethod.Tabby)">Tabby</option>
                            <option value="@((Int32)PaymentMethod.Cash)">Cash</option>
                            <option value="@((Int32)PaymentMethod.Wallet)">Wallet</option>
                        </select>


                        <!-- ========== End Simple Select Field Block ========== -->
                    </div>
                    <div class="col-12 mt-3">
                        <a href="#" class="btn btn-lg btn-primary" onclick="searchDataTable()">Search</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
        <div class="tabs">

            <ul class="nav nav-tabs border-secondary">
                <li class="nav-item active">
                    <a class="nav-link" data-bs-target="#paid" href="#paid" data-bs-toggle="tab">@SharedHtmlLocalizer["Paid"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-target="#unpaid" href="#unpaid" data-bs-toggle="tab">@SharedHtmlLocalizer["Unpaid"]</a>
                </li>
            </ul>
            <div class="tab-content bg-white">
                <div id="paid" class="tab-pane active">
                    <div class="row">
                        <div class="col-12">
                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="paid-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="1" class="">@SharedHtmlLocalizer["PaymentID"]</th>
                                        <th data-priority="5" class="">@SharedHtmlLocalizer["PaymentDate"]</th>
                                        <th data-priority="6" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                                        <th data-priority="7" class="">@SharedHtmlLocalizer["MobileNumber"]</th>
                                        <th data-priority="7" class="">@SharedHtmlLocalizer["PrepaidCardName"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["TotalAmountKWD"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentMethod"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentStatus"]</th>
                                        <th data-priority="2" class="">@SharedHtmlLocalizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>

                        </div>
                        <!-- ========== End Card Block ========== -->
                    </div>
                </div>

                <div id="unpaid" class="tab-pane">
                    <div class="row">
                        <div class="col-12">

                            <!-- ========== Start Table Block ========== -->
                            <table class="table border-secondary align-middle mobile-optimised datatable-default-" id="unpaid-datatable-default-">
                                <thead>
                                    <tr>
                                        <th data-priority="1" class="">@SharedHtmlLocalizer["PaymentID"]</th>
                                        <th data-priority="5" class="">@SharedHtmlLocalizer["PaymentDate"]</th>
                                        <th data-priority="6" class="">@SharedHtmlLocalizer["CustomerName"]</th>
                                        <th data-priority="7" class="">@SharedHtmlLocalizer["MobileNumber"]</th>
                                        <th data-priority="7" class="">@SharedHtmlLocalizer["PrepaidCardName"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["TotalAmountKWD"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentMethod"]</th>
                                        <th data-priority="4" class="">@SharedHtmlLocalizer["PaymentStatus"]</th>
                                        <th data-priority="2" class="">@SharedHtmlLocalizer["Actions"]</th>
                                    </tr>
                                </thead>
                                <tbody class="border-secondary">
                                </tbody>
                            </table>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/developer/js/Order/PrepaidCardSales_Datatable.js" asp-append-version="true"></script>
