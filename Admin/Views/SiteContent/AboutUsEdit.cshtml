@model Data.Common.BaseEntityId
<header class="page-header">
    <h2>@SharedHtmlLocalizer["AboutUs"]</h2>
    <input type="hidden" id="typeId" value="@Model.Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["AboutUs"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                    <!-- ========== Start ios7 Switch ========== -->

                    <div class="switch switch-sm switch-primary my-0  ">
                        <label for="">@SharedHtmlLocalizer["Display"]</label>
                        <input type="checkbox" name="active" id="active" data-plugin-ios-switch  />
                    </div>
                    <!-- ========== End ios7 Switch ========== -->


                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                    <div class="row">
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Summernote WYSIWYG ========== -->
                            <label for="contentEn" class="form-label">@SharedHtmlLocalizer["AboutUsTextEn"]</label>
                            <div class="summernote " name="contentEn" id="contentEn"></div>

                            <!-- ========== End Summernote WYSIWYG ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Summernote WYSIWYG ========== -->
                            <label for="contentAr" class="form-label">@SharedHtmlLocalizer["AboutUsTextAr"]</label>
                            <div class="summernote dir-rtl" dir="rtl" name="contentAr" id="contentAr"></div>


                            <!-- ========== End Summernote WYSIWYG ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <div class="row">
                                <!-- ========== Start Simple Image Upload Block ========== -->
                                <div class="row">
                                    <div class="col-10 mb-3">
                                        <label for="formFile" class="form-label">@SharedHtmlLocalizer["UploadImage"]</label>
                                        <input class="form-control form-control-lg border-secondary rounded-4" type="file" id="imageFile" name="imageFile">
                                        <small class="form-text text-muted">@SharedHtmlLocalizer["ConsistencyPurpose1260X700"]</small>
                                        <div class="invalid-feedback">
                                            @SharedHtmlLocalizer["ConsistencyPurpose1260X700"]
                                        </div>
                                    </div>
                                    <div class="col-2 d-flex flex-column align-items-center justify-content-center">
                                        <img src="/assets/img/about-us-img.jpg" class="img-fluid preview-image-" id="imagePreview" name="imagePreview">
                                        <p class="text-muted text-center mb-1 mt-2">@SharedHtmlLocalizer["Preview"]</p>
                                    </div>
                                </div>
                                <script>
                                    $("#imageFile").change(function (event) {
                                        var image = document.getElementById('imagePreview');
                                        image.src = URL.createObjectURL(event.target.files[0]);
                                    });
                                </script>
                                <!-- ========== End Simple Image Upload Block ========== -->
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button id="btnSave" class="btn btn-primary btn-lg save-btn fw-bold">@SharedHtmlLocalizer["Save"]</button>
                            <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button>

                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>
 
<script src="~/developer/js/SiteContent/AboutUs_CRUD.js" asp-append-version="true"></script>

