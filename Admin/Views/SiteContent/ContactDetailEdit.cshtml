@model Data.Common.BaseEntityId
<header class="page-header">
    <h2>@SharedHtmlLocalizer["ContactDetails"]</h2> 
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary">@SharedHtmlLocalizer["ContactDetails"]</h2>
                <div class="card-actions d-flex position-static top-0 end-0">
                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                    <div class="row">
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- <h2 class="card-title">Office Address</h2> -->
                            <!-- ========== Start Simple Input Field ========== -->
                            <label for="addressEn" class="form-label">@SharedHtmlLocalizer["AddressTextEn"]<span class=" text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg rounded-4 border-secondary " name="addressEn" id="addressEn" aria-describedby="@SharedHtmlLocalizer["AddressTextEn"]" placeholder="@SharedHtmlLocalizer["EnterYourOfficeAddress"]" value="" required>
                            <div class="invalid-feedback">@SharedHtmlLocalizer["EnterValidAddress"]</div>
                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Simple Input Field ========== -->
                            <label for="addressAr" class="form-label">@SharedHtmlLocalizer["AddressTextAr"]<span class=" text-danger">*</span></label>
                            <input type="text" dir="rtl" class="form-control form-control-lg rounded-4 border-secondary " name="addressAr" id="addressAr" aria-describedby="@SharedHtmlLocalizer["AddressTextAr"]" placeholder="@SharedHtmlLocalizer["EnterYourOfficeAddress"]" value="" required>
                            <div class="invalid-feedback">@SharedHtmlLocalizer["EnterValidAddress"]</div>
                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Simple Input Field ========== -->
                            <label for="mobileNumber" class="form-label">@SharedHtmlLocalizer["MobileNumber"]<span class=" text-danger">*</span></label>
                            <input type="tel" onkeypress='validateMobileNumber(event)' maxlength="8" class="form-control form-control-lg rounded-4 border-secondary " name="mobileNumber" id="mobileNumber" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" placeholder="@SharedHtmlLocalizer["EnterYourOfficeContactNumber"]" value="" required>
                            <div class="invalid-feedback">@SharedHtmlLocalizer["EnterValidMobile"]</div>
                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Simple Input Field ========== -->
                            <label for="emailAddress" class="form-label">@SharedHtmlLocalizer["Email"]<span class=" text-danger">*</span></label>
                            <input type="email" class="form-control form-control-lg rounded-4 border-secondary " name="emailAddress" id="emailAddress" aria-describedby="@SharedHtmlLocalizer["Email"]" placeholder="@SharedHtmlLocalizer["EnterYourOfficeEmail"]" value="" required>
                            <div class="invalid-feedback">@SharedHtmlLocalizer["EnterValidEmail"]</div>
                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                        <div class="col-12 col-lg-6 mb-3">
                            <!-- ========== Start Simple Input Field ========== -->
                            <label for="mobileNumber" class="form-label">@SharedHtmlLocalizer["WhatsAppNumber"]<span class=" text-danger">*</span></label>
                            <input type="tel" onkeypress='validateMobileNumber(event)' maxlength="8" class="form-control form-control-lg rounded-4 border-secondary " name="whatsAppNumber" id="whatsAppNumber" aria-describedby="@SharedHtmlLocalizer["MobileNumber"]" placeholder="" value="" required>
                            <div class="invalid-feedback">@SharedHtmlLocalizer["EnterValidMobile"]</div>
                            <!-- ========== End Simple Input Field ========== -->
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12">
                            <button id="btnSave" class="btn btn-primary btn-lg save-btn  fw-bold">@SharedHtmlLocalizer["Save"]</button>
                            <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>
 
<script src="~/developer/js/SiteContent/ContactDetail_CRUD.js" asp-append-version="true"></script>

