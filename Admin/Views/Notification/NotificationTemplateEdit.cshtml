@model Data.Common.BaseEntityId
<header class="page-header">
    <h2> @(@Model.Id > 0 ? "Edit Notification Template" : "")  </h2>
    <input type="hidden" value="@Model.Id" id="Id" />
    <div class="end-wrapper text-end me-5">
        <ol class="breadcrumbs">
            <li>
                <a href="/home">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ol>
    </div>
</header>
  
<div class="row">
    <div class="col">
        <!-- ========== Start Card Block ========== -->
        <section class="card mb-3 border border-secondary">
            <header class="card-header d-flex justify-content-between align-items-center p-3 border-secondary body-bg-secondary">
                <h2 class="card-title text-primary" id="notificationTitle"></h2>
                <div class="card-actions d-flex position-static top-0 end-0">

                </div>
            </header>
            <div class="card-body ">
                <form method="post" id="dataForm" name="dataForm" enctype="multipart/form-data">
                    @await Html.PartialAsync("_FormHiddenFieldsPartial")
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-12 mb-3">
                                @*<h2 class="card-title text-primary mb-2">OTP SMS Notification</h2>*@
                                <!-- ========== Start ios7 Switch ========== -->

                                @*<div class="switch switch-sm switch-primary my-0  EnableOTPNotifications-switch">

                                    <input type="checkbox" name="smsEnabled" id="smsEnabled" data-plugin-ios-switch  />
                                </div>*@
                                <!-- ========== End ios7 Switch ========== -->
                                <!-- ========== Start ios7 Switch Conditional Script ========== -->
                                
                                <!-- ========== End ios7 Switch Conditional Script ========== -->

                                <div class="row mt-2" >
                                    <div class="col-12 col-lg-6 mb-3">
                                        <!-- ========== Start Simple Text Area ========== -->
                                        <label for="" class="form-label ">@SharedHtmlLocalizer["SMS_Message_En"]<span class=" text-danger">*</span></label>
                                        <textarea class="form-control form-control-lg rounded-4 border-secondary " name="smsMessageEn" id="smsMessageEn" 
                                                  aria-describedby="" placeholder="" rows="3" required></textarea>
                                        <small class="form-text text-muted"></small>

                                        <!-- ========== End Simple Text Area ========== -->
                                    </div>
                                    <div class="col-12 col-lg-6 mb-3">
                                        <!-- ========== Start Simple Text Area ========== -->
                                        <label for="" class="form-label ">@SharedHtmlLocalizer["SMS_Message_Ar"]<span class=" text-danger">*</span></label>
                                        <textarea dir="rtl" class="form-control form-control-lg rounded-4 border-secondary " name="smsMessageAr" id="smsMessageAr" 
                                                  aria-describedby="" placeholder="" rows="3" required></textarea>
                                        <small class="form-text text-muted"></small>

                                        <!-- ========== End Simple Text Area ========== -->
                                    </div>
                                </div>
                           
                            <div class="col-12 mb-3" style="display:none">
                                <h2 class="card-title text-primary mb-2">Push Notification</h2>
                                <!-- ========== Start ios7 Switch ========== -->

                                <div class="switch switch-sm switch-primary my-0  EnablePaymentFailedNotifications-switch">

                                    <input type="checkbox" name="pushEnabled" id="pushEnabled" data-plugin-ios-switch />
                                </div>
                                <!-- ========== End ios7 Switch ========== -->
                                <!-- ========== Start ios7 Switch Conditional Script ========== -->
                                 
                                <!-- ========== End ios7 Switch Conditional Script ========== -->

                                <div class="row mt-2 EnablePaymentFailedNotifications" style="display:none">
                                    <div class="col-12 col-lg-6 mb-3">
                                        <!-- ========== Start Simple Text Area ========== -->
                                        <label for="" class="form-label ">Push Notification Template (EN)<span class=" text-danger">*</span></label>
                                        <textarea class="form-control form-control-lg rounded-4 border-secondary " 
                                                  name="pushMessageEn" id="pushMessageEn" 
                                                  aria-describedby="SMS Template (EN)" placeholder="" rows="3" required></textarea>


                                        <!-- ========== End Simple Text Area ========== -->
                                    </div>
                                    <div class="col-12 col-lg-6 mb-3">
                                        <!-- ========== Start Simple Text Area ========== -->
                                        <label for="" class="form-label ">Push Notification Template (AR)<span class=" text-danger">*</span></label>
                                        <textarea dir="rtl" class="form-control form-control-lg rounded-4 border-secondary " 
                                                  name="pushMessageAr" id="pushMessageAr" 
                                                  aria-describedby="SMS Template (AR)" placeholder="" rows="3" required></textarea>


                                        <!-- ========== End Simple Text Area ========== -->
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button id="btnSave" class="btn btn-primary btn-lg save-btn  fw-bold">@SharedHtmlLocalizer["Save"]</button>
                            <button type="button" class="btn btn-warning" onclick="history.go(-1)">@SharedHtmlLocalizer["Back"]</button> 
                        </div>
                    </div>
                        </div>
                </form>
            </div>
        </section>
        <!-- ========== End Card Block ========== -->
    </div>
</div>

<script src="~/developer/js/NotificationTemplate/Template_CRUD.js" asp-append-version="true"></script>

